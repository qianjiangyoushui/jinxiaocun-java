<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Acountdate">
	
	<!-- 缓存条数 -->
	<cache size="2000" />
	
	<!-- 条件语句 -->
	<sql id="WhereSQL">
		<where>
			<if test="guid != null and guid != ''"> 
			AND T.GUID = #{guid} 
			</if>
			<if test="projectid != null and projectid != ''"> 
			AND T.PROJECTID = #{projectid} 
			</if>
			<if test="paydate != null and paydate != ''"> 
			AND T.PAYDATE = #{paydate} 
			</if>
			<if test="payamount != null and payamount != ''"> 
			AND T.PAYAMOUNT = #{payamount} 
			</if>
			<if test="backdate != null and backdate != ''"> 
			AND T.BACKDATE = #{backdate} 
			</if>
			<if test="backamount != null and backamount != ''"> 
			AND T.BACKAMOUNT = #{backamount} 
			</if>
			<if test="companyid != null and companyid != ''"> 
			AND T.COMPANYID = #{companyid} 
			</if>
		</where>
	</sql>
	
	<!-- 查找语句 -->
	<select id="find" resultType="Acountdate" parameterType="Acountdate" flushCache="false" useCache="true">
    	SELECT 
	    	T.GUID AS guid, 
	    	T.PROJECTID AS projectid, 
	    	T.PAYDATE AS paydate, 
	    	T.PAYAMOUNT AS payamount, 
	    	T.BACKDATE AS backdate, 
	    	T.BACKAMOUNT AS backamount, 
	    	T.COMPANYID AS companyid 
    	FROM acountdate T
		<include refid="WhereSQL" />
		ORDER BY T.PAYDATE 
	</select>
	
	<!-- 获取总记录数语句 -->
	<select id="findCount" resultType="java.lang.Integer" parameterType="Acountdate" flushCache="false" useCache="true">
    	SELECT COUNT(*)  FROM acountdate T
		<include refid="WhereSQL" />
	</select>
	
	<!-- 插入语句 -->
	<insert id="insert" parameterType="Acountdate" flushCache="true"> 
		INSERT INTO acountdate
		(
			GUID, 
			PROJECTID, 
			PAYDATE, 
			PAYAMOUNT, 
			BACKDATE, 
			BACKAMOUNT, 
			COMPANYID 
		 ) 
		VALUES
		(
			#{guid,jdbcType=VARCHAR}, 
			#{projectid,jdbcType=VARCHAR}, 
			#{paydate,jdbcType=DATE}, 
			#{payamount,jdbcType=DECIMAL}, 
			#{backdate,jdbcType=DATE}, 
			#{backamount,jdbcType=DECIMAL}, 
			#{companyid,jdbcType=VARCHAR} 
		) 
	</insert>
	
	<!-- 更新语句 -->
	<update id="update"  parameterType="Acountdate" flushCache="true"> 
		update acountdate 
		<set> 
			<if test="guid != null">GUID=#{guid},</if>
			<if test="projectid != null">PROJECTID=#{projectid},</if>
			<if test="paydate != null">PAYDATE=#{paydate},</if>
			<if test="payamount != null">PAYAMOUNT=#{payamount},</if>
			<if test="backdate != null">BACKDATE=#{backdate},</if>
			<if test="backamount != null">BACKAMOUNT=#{backamount},</if>
			<if test="companyid != null">COMPANYID=#{companyid},</if>
		</set>
		WHERE GUID = #{guid}
	</update> 
	
	<!-- 单选删除语句 -->
	<delete id="delete" parameterType="Acountdate" flushCache="true"> 
		DELETE FROM acountdate WHERE GUID = #{guid}
	</delete>
	
	<!-- 多选删除 -->
	<delete id="mulDel" parameterType="java.lang.String" flushCache="true">
		DELETE FROM acountdate WHERE GUID IN
		<foreach item="id" collection="array" open="(" separator="," close=")"> 
			#{id}
		</foreach> 
	</delete>
</mapper>
