<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Advancepay">
	
	<!-- 缓存条数 -->
	<cache size="2000" />
	
	<!-- 条件语句 -->
	<sql id="WhereSQL">
		<where>
			<if test="guid != null and guid != ''"> 
			AND T.GUID = #{guid} 
			</if>
			<if test="advancedate != null and advancedate != ''"> 
			AND T.ADVANCEDATE = #{advancedate} 
			</if>
			<if test="advancemoney != null and advancemoney != ''"> 
			AND T.ADVANCEMONEY = #{advancemoney} 
			</if>
			<if test="projectid != null and projectid != ''"> 
			AND T.PROJECTID = #{projectid} 
			</if>
			<if test="operateid != null and operateid != ''"> 
			AND T.OPERATEID = #{operateid} 
			</if>
			<if test="lastupdatetime != null and lastupdatetime != ''"> 
			AND T.LASTUPDATETIME = #{lastupdatetime} 
			</if>
			<if test="del != null and del != ''"> 
			AND T.DEL = #{del} 
			</if>
			<if test="createdate != null and createdate != ''"> 
			AND T.CREATEDATE = #{createdate} 
			</if>
			<if test="description != null and description != ''"> 
			AND T.DESCRIPTION = #{description} 
			</if>
		</where>
	</sql>
	
	<!-- 查找语句 -->
	<select id="find" resultType="Advancepay" parameterType="Advancepay" flushCache="false" useCache="true">
    	SELECT 
	    	T.GUID AS guid, 
	    	T.ADVANCEDATE AS advancedate, 
	    	T.ADVANCEMONEY AS advancemoney, 
	    	T.PROJECTID AS projectid, 
	    	T.OPERATEID AS operateid, 
	    	T.LASTUPDATETIME AS lastupdatetime, 
	    	T.DEL AS del, 
	    	T.CREATEDATE AS createdate, 
	    	T.DESCRIPTION AS description 
    	FROM advancepay T
		<include refid="WhereSQL" /> 
		ORDER BY T.ADVANCEDATE  
	</select>
	
	<!-- 获取总记录数语句 -->
	<select id="findCount" resultType="java.lang.Integer" parameterType="Advancepay" flushCache="false" useCache="true">
    	SELECT COUNT(*)  FROM advancepay T
		<include refid="WhereSQL" />
	</select>
	
	<!-- 插入语句 -->
	<insert id="insert" parameterType="Advancepay" flushCache="true"> 
		INSERT INTO advancepay
		(
			GUID, 
			ADVANCEDATE, 
			ADVANCEMONEY, 
			PROJECTID, 
			OPERATEID, 
			LASTUPDATETIME, 
			DEL, 
			CREATEDATE, 
			DESCRIPTION 
		 ) 
		VALUES
		(
			#{guid,jdbcType=VARCHAR}, 
			#{advancedate,jdbcType=DATE}, 
			#{advancemoney,jdbcType=DECIMAL}, 
			#{projectid,jdbcType=VARCHAR}, 
			#{operateid,jdbcType=VARCHAR}, 
			#{lastupdatetime,jdbcType=TIMESTAMP}, 
			#{del,jdbcType=VARCHAR}, 
			#{createdate,jdbcType=TIMESTAMP}, 
			#{description,jdbcType=VARCHAR} 
		) 
	</insert>
	
	<!-- 更新语句 -->
	<update id="update"  parameterType="Advancepay" flushCache="true"> 
		update advancepay 
		<set> 
			<if test="guid != null">GUID=#{guid},</if>
			<if test="advancedate != null">ADVANCEDATE=#{advancedate},</if>
			<if test="advancemoney != null">ADVANCEMONEY=#{advancemoney},</if>
			<if test="projectid != null">PROJECTID=#{projectid},</if>
			<if test="operateid != null">OPERATEID=#{operateid},</if>
			<if test="lastupdatetime != null">LASTUPDATETIME=#{lastupdatetime},</if>
			<if test="del != null">DEL=#{del},</if>
			<if test="createdate != null">CREATEDATE=#{createdate},</if>
			<if test="description != null">DESCRIPTION=#{description},</if>
		</set>
		WHERE GUID = #{guid}
	</update> 
	
	<!-- 单选删除语句 -->
	<delete id="delete" parameterType="Advancepay" flushCache="true"> 
		DELETE FROM advancepay WHERE GUID = #{guid}
	</delete>
	
	<!-- 多选删除 -->
	<delete id="mulDel" parameterType="java.lang.String" flushCache="true">
		DELETE FROM advancepay WHERE GUID IN
		<foreach item="id" collection="array" open="(" separator="," close=")"> 
			#{id}
		</foreach> 
	</delete>
</mapper>
