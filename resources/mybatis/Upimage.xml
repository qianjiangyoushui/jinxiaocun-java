<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Upimage">
	
	<!-- 缓存条数 -->
	<cache size="2000" />
	
	<!-- 条件语句 -->
	<sql id="WhereSQL">
		<where>
			<if test="guid != null and guid != ''"> 
			AND T.GUID = #{guid} 
			</if>
			<if test="evidenceguid != null and evidenceguid != ''"> 
			AND T.EVIDENCEGUID = #{evidenceguid} 
			</if>
			<if test="url != null and url != ''"> 
			AND T.URL = #{url} 
			</if>
			<if test="userguid != null and userguid != ''"> 
			AND T.USERGUID = #{userguid} 
			</if>
			<if test="imagename != null and imagename != ''"> 
			AND T.IMAGENAME = #{imagename} 
			</if>
			<if test="imagetype != null and imagetype != ''"> 
			AND T.IMAGETYPE = #{imagetype} 
			</if>
			<if test="uploadtime != null and uploadtime != ''"> 
			AND T.UPLOADTIME = #{uploadtime} 
			</if>
		</where>
	</sql>
	
	<!-- 查找语句 -->
	<select id="find" resultType="Upimage" parameterType="Upimage" flushCache="false" useCache="true">
    	SELECT 
	    	T.GUID AS guid, 
	    	T.EVIDENCEGUID AS evidenceguid, 
	    	T.URL AS url, 
	    	T.USERGUID AS userguid, 
	    	T.IMAGENAME AS imagename, 
	    	T.IMAGETYPE AS imagetype, 
	    	T.UPLOADTIME AS uploadtime 
    	FROM upimage T
		<include refid="WhereSQL" /> 
	</select>
	
	<!-- 获取总记录数语句 -->
	<select id="findCount" resultType="java.lang.Integer" parameterType="Upimage" flushCache="false" useCache="true">
    	SELECT COUNT(*)  FROM upimage T
		<include refid="WhereSQL" />
	</select>
	
	<!-- 插入语句 -->
	<insert id="insert" parameterType="Upimage" flushCache="true"> 
		INSERT INTO upimage
		(
			GUID, 
			EVIDENCEGUID, 
			URL, 
			USERGUID, 
			IMAGENAME, 
			IMAGETYPE, 
			UPLOADTIME 
		 ) 
		VALUES
		(
			#{guid,jdbcType=VARCHAR}, 
			#{evidenceguid,jdbcType=VARCHAR}, 
			#{url,jdbcType=VARCHAR}, 
			#{userguid,jdbcType=VARCHAR}, 
			#{imagename,jdbcType=VARCHAR}, 
			#{imagetype,jdbcType=VARCHAR}, 
			#{uploadtime,jdbcType=DATE} 
		) 
	</insert>
	
	<!-- 更新语句 -->
	<update id="update"  parameterType="Upimage" flushCache="true"> 
		update upimage 
		<set> 
			<if test="guid != null">GUID=#{guid},</if>
			<if test="evidenceguid != null">EVIDENCEGUID=#{evidenceguid},</if>
			<if test="url != null">URL=#{url},</if>
			<if test="userguid != null">USERGUID=#{userguid},</if>
			<if test="imagename != null">IMAGENAME=#{imagename},</if>
			<if test="imagetype != null">IMAGETYPE=#{imagetype},</if>
			<if test="uploadtime != null">UPLOADTIME=#{uploadtime},</if>
		</set>
		WHERE GUID = #{guid}
	</update> 
	
	<!-- 单选删除语句 -->
	<delete id="delete" parameterType="Upimage" flushCache="true"> 
		DELETE FROM upimage WHERE GUID = #{guid}
	</delete>
	
	<!-- 多选删除 -->
	<delete id="mulDel" parameterType="java.lang.String" flushCache="true">
		DELETE FROM upimage WHERE GUID IN
		<foreach item="id" collection="array" open="(" separator="," close=")"> 
			#{id}
		</foreach> 
	</delete>
</mapper>
