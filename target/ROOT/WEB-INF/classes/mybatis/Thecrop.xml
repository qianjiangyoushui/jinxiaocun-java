<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Thecrop">
	
	<!-- 缓存条数 -->
	<cache size="2000" />
	
	<!-- 条件语句 -->
	<sql id="WhereSQL">
		<where>
			<if test="guid != null and guid != ''"> 
			AND T.GUID = #{guid} 
			</if>
			<if test="plotid != null and plotid != ''"> 
			AND T.PLOTID = #{plotid} 
			</if>
			<if test="plantcrops != null and plantcrops != ''"> 
			AND T.PLANTCROPS = #{plantcrops} 
			</if>
			<if test="medicate != null and medicate != ''"> 
			AND T.MEDICATE = #{medicate} 
			</if>
			<if test="createdate != null and createdate != ''"> 
			AND T.CREATEDATE = #{createdate} 
			</if>
			<if test="operatorid != null and operatorid != ''"> 
			AND T.OPERATORID = #{operatorid} 
			</if>
			<if test="years != null and years != ''"> 
			AND T.YEARS = #{years} 
			</if>
		</where>
	</sql>
	
	<!-- 查找语句 -->
	<select id="find" resultType="Thecrop" parameterType="Thecrop" flushCache="false" useCache="true">
    	SELECT 
	    	T.GUID AS guid, 
	    	T.PLOTID AS plotid, 
	    	T.PLANTCROPS AS plantcrops, 
	    	T.MEDICATE AS medicate, 
	    	T.CREATEDATE AS createdate, 
	    	T.OPERATORID AS operatorid, 
	    	T.YEARS AS years 
    	FROM thecrop T
		<include refid="WhereSQL" />
		ORDER BY T.CREATEDATE 
	</select>
	
	<!-- 获取总记录数语句 -->
	<select id="findCount" resultType="java.lang.Integer" parameterType="Thecrop" flushCache="false" useCache="true">
    	SELECT COUNT(*)  FROM thecrop T
		<include refid="WhereSQL" />
	</select>
	
	<!-- 插入语句 -->
	<insert id="insert" parameterType="Thecrop" flushCache="true"> 
		INSERT INTO thecrop
		(
			GUID, 
			PLOTID, 
			PLANTCROPS, 
			MEDICATE, 
			CREATEDATE, 
			OPERATORID, 
			YEARS 
		 ) 
		VALUES
		(
			#{guid,jdbcType=VARCHAR}, 
			#{plotid,jdbcType=VARCHAR}, 
			#{plantcrops,jdbcType=VARCHAR}, 
			#{medicate,jdbcType=VARCHAR}, 
			#{createdate,jdbcType=DATE}, 
			#{operatorid,jdbcType=VARCHAR}, 
			#{years,jdbcType=INTEGER} 
		) 
	</insert>
	
	<!-- 更新语句 -->
	<update id="update"  parameterType="Thecrop" flushCache="true"> 
		update thecrop 
		<set> 
			<if test="guid != null">GUID=#{guid},</if>
			<if test="plotid != null">PLOTID=#{plotid},</if>
			<if test="plantcrops != null">PLANTCROPS=#{plantcrops},</if>
			<if test="medicate != null">MEDICATE=#{medicate},</if>
			<if test="createdate != null">CREATEDATE=#{createdate},</if>
			<if test="operatorid != null">OPERATORID=#{operatorid},</if>
			<if test="years != null">YEARS=#{years},</if>
		</set>
		WHERE GUID = #{guid}
	</update> 
	
	<!-- 单选删除语句 -->
	<delete id="delete" parameterType="Thecrop" flushCache="true"> 
		DELETE FROM thecrop WHERE GUID = #{guid}
	</delete>
	
	<!-- 多选删除 -->
	<delete id="mulDel" parameterType="java.lang.String" flushCache="true">
		DELETE FROM thecrop WHERE GUID IN
		<foreach item="id" collection="array" open="(" separator="," close=")"> 
			#{id}
		</foreach> 
	</delete>
</mapper>
