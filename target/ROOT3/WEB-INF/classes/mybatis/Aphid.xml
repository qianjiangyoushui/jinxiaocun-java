<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Aphid">
	
	<!-- 缓存条数 -->
	<cache size="2000" />
	
	<!-- 条件语句 -->
	<sql id="WhereSQL">
		<where>
			<if test="guid != null and guid != ''"> 
			AND T.GUID = #{guid} 
			</if>
			<if test="seedfileid != null and seedfileid != ''"> 
			AND T.SEEDFILEID = #{seedfileid} 
			</if>
			<if test="recorddate != null and recorddate != ''"> 
			AND T.RECORDDATE = #{recorddate} 
			</if>
			<if test="aphidcode != null and aphidcode != ''"> 
			AND T.APHIDCODE = #{aphidcode} 
			</if>
			<if test="amount != null and amount != ''"> 
			AND T.AMOUNT = #{amount} 
			</if>
			<if test="investigator != null and investigator != ''"> 
			AND T.INVESTIGATOR = #{investigator} 
			</if>
			<if test="createdate != null and createdate != ''"> 
			AND T.CREATEDATE = #{createdate} 
			</if>
			<if test="operatorid != null and operatorid != ''"> 
			AND T.OPERATORID = #{operatorid} 
			</if>
		</where>
	</sql>
	
	<!-- 查找语句 -->
	<select id="find" resultType="Aphid" parameterType="Aphid" flushCache="false" useCache="true">
    	SELECT 
	    	T.GUID AS guid, 
	    	T.SEEDFILEID AS seedfileid, 
	    	T.RECORDDATE AS recorddate, 
	    	T.APHIDCODE AS aphidcode, 
	    	T.AMOUNT AS amount, 
	    	T.INVESTIGATOR AS investigator, 
	    	T.CREATEDATE AS createdate, 
	    	T.OPERATORID AS operatorid 
    	FROM aphid T
		<include refid="WhereSQL" />
		ORDER BY T.CREATEDATE desc
	</select>
	
	<!-- 获取总记录数语句 -->
	<select id="findCount" resultType="java.lang.Integer" parameterType="Aphid" flushCache="false" useCache="true">
    	SELECT COUNT(*)  FROM aphid T
		<include refid="WhereSQL" />
	</select>
	
	<!-- 插入语句 -->
	<insert id="insert" parameterType="Aphid" flushCache="true"> 
		INSERT INTO aphid
		(
			GUID, 
			SEEDFILEID, 
			RECORDDATE, 
			APHIDCODE, 
			AMOUNT, 
			INVESTIGATOR, 
			CREATEDATE, 
			OPERATORID 
		 ) 
		VALUES
		(
			#{guid,jdbcType=VARCHAR}, 
			#{seedfileid,jdbcType=VARCHAR}, 
			#{recorddate,jdbcType=DATE}, 
			#{aphidcode,jdbcType=VARCHAR}, 
			#{amount,jdbcType=INTEGER}, 
			#{investigator,jdbcType=VARCHAR}, 
			#{createdate,jdbcType=DATE}, 
			#{operatorid,jdbcType=VARCHAR} 
		) 
	</insert>
	
	<!-- 更新语句 -->
	<update id="update"  parameterType="Aphid" flushCache="true"> 
		update aphid 
		<set> 
			<if test="guid != null">GUID=#{guid},</if>
			<if test="seedfileid != null">SEEDFILEID=#{seedfileid},</if>
			<if test="recorddate != null">RECORDDATE=#{recorddate},</if>
			<if test="aphidcode != null">APHIDCODE=#{aphidcode},</if>
			<if test="amount != null">AMOUNT=#{amount},</if>
			<if test="investigator != null">INVESTIGATOR=#{investigator},</if>
			<if test="createdate != null">CREATEDATE=#{createdate},</if>
			<if test="operatorid != null">OPERATORID=#{operatorid},</if>
		</set>
		WHERE GUID = #{guid}
	</update> 
	
	<!-- 单选删除语句 -->
	<delete id="delete" parameterType="Aphid" flushCache="true"> 
		DELETE FROM aphid WHERE GUID = #{guid}
	</delete>
	
	<!-- 多选删除 -->
	<delete id="mulDel" parameterType="java.lang.String" flushCache="true">
		DELETE FROM aphid WHERE GUID IN
		<foreach item="id" collection="array" open="(" separator="," close=")"> 
			#{id}
		</foreach> 
	</delete>
</mapper>
